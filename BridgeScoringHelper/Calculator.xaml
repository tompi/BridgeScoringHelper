<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:components="clr-namespace:BridgeScoringHelper.Components" 
    BackgroundColor="Black"
    x:Class="BridgeScoringHelper.Calculator">
    <StackLayout Padding="20">
        
        <Label x:Name="result" HorizontalOptions="Center" Text="2NT XX (-10) = 7000" 
               TextColor="White" FontSize="Large" FontAttributes="Bold"/>
        
        <components:ContractEntry x:Name="contractEntry"/>
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
            <components:LabelButton x:Name="minusButton" Text="-" HorizontalOptions="Start"/>
            <Label TextColor="White" x:Name="tricksLabel" Text="Tricks: 10" 
                   HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>
            <components:LabelButton x:Name="plusButton" Text="+" HorizontalOptions="End"/>
        </StackLayout>
        
    </StackLayout>
</ContentPage>
